{
	"name": "simple-auth-backend-v1",
	"author": "Mohasin K.R",
	"version": "1.0.0",
	"description": "Simple authentication backend V1",
	"main": "index.ts",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "npm run clean && tsc && tsc-alias && npm run copy-files",
		"clean": "rm -rf ./build",
		"copy-files": "cp -r ./src/views/ ./build/src/",
		"build:watch": "tsc -w -p tsconfig.json",
		"start": "node build/src/index.js",
		"dev": "tsx watch src/index.ts",
		"biome:lint": "biome check",
		"biome:format": "biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.17",
		"husky": "^9.0.11",
		"nodemon": "^3.0.3",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.10",
		"tsx": "^4.7.1",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@types/jsonwebtoken": "^9.0.6",
		"@vinejs/vine": "^1.7.1",
		"dotenv": "^16.4.3",
		"express": "^4.18.2",
		"express-session": "^1.18.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.1.2",
		"morgan": "^1.10.0",
		"nodemailer": "^6.9.13",
		"pug": "^3.0.2"
	}
}
